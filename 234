    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const joinButtons = document.querySelectorAll('.join-btn');
            const paymentSection = document.getElementById('paymentSection');
            const successMessage = document.getElementById('successMessage');
            const selectedRegion = document.getElementById('selectedRegion');
            const selectedPrice = document.getElementById('selectedPrice');
            const joinedRegion = document.getElementById('joinedRegion');
            const payBtn = document.getElementById('payBtn');
            const backBtn = document.getElementById('backBtn');
            const paymentMethods = document.querySelectorAll('.payment-method');
            
            let currentRegion = '';
            let currentPrice = '';
            let paymentMethod = 'wechat';
            
            // 选择地区群聊
            joinButtons.forEach(button => {
                button.addEventListener('click', function() {
                    currentRegion = this.getAttribute('data-region');
                    currentPrice = this.getAttribute('data-price');
                    
                    selectedRegion.textContent = currentRegion + '地区群';
                    selectedPrice.textContent = '￥' + currentPrice;
                    joinedRegion.textContent = currentRegion + '地区群';
                    
                    paymentSection.style.display = 'block';
                    paymentSection.scrollIntoView({ behavior: 'smooth' });
                });
            });
            
            // 选择支付方式
            paymentMethods.forEach(method => {
                method.addEventListener('click', function() {
                    paymentMethods.forEach(m => m.classList.remove('selected'));
                    this.classList.add('selected');
                    paymentMethod = this.getAttribute('data-method');
                });
            });
            
            // 支付按钮点击
            payBtn.addEventListener('click', function() {
                const name = document.getElementById('name').value;
                const phone = document.getElementById('phone').value;
                const wechat = document.getElementById('wechat').value;
                
                if (!name || !phone || !wechat) {
                    alert('请填写完整信息');
                    return;
                }
                
                // 模拟支付过程
                payBtn.textContent = '支付中...';
                payBtn.disabled = true;
                
                // 这里应该调用实际的支付接口
                // 使用您提供的支付服务端口和PID/KEY
                // 由于安全原因，实际支付请求应该在后端完成
                
                setTimeout(function() {
                    // 模拟支付成功
                    paymentSection.style.display = 'none';
                    successMessage.style.display = 'block';
                    successMessage.scrollIntoView({ behavior: 'smooth' });
                }, 2000);
            });
            
            // 返回首页
            backBtn.addEventListener('click', function() {
                successMessage.style.display = 'none';
                paymentSection.style.display = 'none';
                
                // 重置表单
                document.getElementById('name').value = '';
                document.getElementById('phone').value = '';
                document.getElementById('wechat').value = '';
                
                payBtn.textContent = '立即支付';
                payBtn.disabled = false;
                
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });
        });
    </script>
